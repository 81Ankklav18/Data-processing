<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LinearFunction">

    <Label text="k = " GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="tfk" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="b = " GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="tfb" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="N = " GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="tfN" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Сдвиг = " GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="tfShift" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Количество точек = " GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="tfCountOfPoints" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label text="Глубина выброса = " GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="tfSpikeDeep" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Button onAction="#newBuildIt" text="BuildIt!" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <Button onAction="#newShift" text="ShiftIt!" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <Button onAction="#newSpike" text="SpikeIt!" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <LineChart fx:id="chart1" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.rowSpan="8">
        <xAxis>
            <NumberAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT" />
        </yAxis>
    </LineChart>

    <columnConstraints>
        <ColumnConstraints maxWidth="69.0" minWidth="16.0" prefWidth="63.0" />
        <ColumnConstraints maxWidth="123.0" minWidth="48.0" prefWidth="56.0" />
        <ColumnConstraints hgrow="ALWAYS"  />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
    </rowConstraints>
</GridPane>
